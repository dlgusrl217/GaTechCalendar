{
    "compilerOptions": {
        "target": "es5",
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "strictFunctionTypes": false,
        "strictNullChecks": false,
        "noImplicitAny": false,
        "noImplicitReturns": true,
        "noUnusedLocals": false,
        "noFallthroughCasesInSwitch": true,
        "forceConsistentCasingInFileNames": true,
        "removeComments": true,
        "sourceMap": true,
        "declaration": true,
        "outDir": "dist-esm",
        "lib": [
            "dom",
            "es5",
            "es2015.promise"
        ]
    },
    "include": [
        "src"
    ]
}